<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.monitor.dal.dailyReport.dao.DailyReportDAO">
    <resultMap id="DailyReportMapper" type="com.monitor.dal.dailyReport.entity.DailyReportDO">
        <id property="reportId" column="report_id"/>
        <result property="reportDate" column="report_date"/>
        <result property="mediaName" column="media_name" />
        <result property="projectName" column="project_name" />
        <result property="runTimes" column="run_times" />
        <result property="taskId" column="task_id" />
    </resultMap>
    <insert id="insertDailyReport" useGeneratedKeys="true" parameterType="com.monitor.dal.dailyReport.entity.DailyReportDO">
        INSERT INTO daily_report (report_date,media_name,project_name,run_times,task_id)
        VALUES (#{reportDate},#{mediaName},#{projectName},#{runTimes},#{taskId});
    </insert>

    <select id="findDailyReportContentByTime" parameterType="com.monitor.dal.dailyReport.dto.DailyRportQueryDTO" resultMap="DailyReportMapper">
        <![CDATA[
            SELECT * FROM daily_report WHERE report_date < #{endTime} AND report_date > #{startTime};
        ]]>
    </select>

    <delete id="deleteZeroRunTimesReport">
        DELETE FROM daily_report WHERE run_times = 0;
    </delete>


</mapper>